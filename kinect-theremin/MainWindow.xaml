        <Label Content="Select Key: " FontSize="24" FontWeight="Normal" Height="51" HorizontalAlignment="Left" Margin="12,328,0,0" Name="label6" VerticalAlignment="Top" />
        <ComboBox Height="40" HorizontalAlignment="Left" Margin="151,333,0,0" Name="keyBox" VerticalAlignment="Top" Width="97" SelectionChanged="keyBox_Changed" FontSize="18" />
